<form action="" method="post" id="idFrmSubmitKeahlian">
    <table class="table">
        <tr>
            <td>
                <label>Nama Keahlian</label>
                <input type="text" name="skill_name" class="form-control" id="idInpNamaKeahlian" placeholder="Nama Keahlian">
            </td>
            <td>
                <label>Level Keahlian *</label>
                <select class="form-control" name="skill_level_id" id="idSkillLevel">
                    <option value="">-Pilih-</option>
                    <option value="1">satu</option>
                    <option value="2">dua</option>
                    <option value="3">tiga</option>
                    <option value="4">empat</option>
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <label>Catatan</label>
                <textarea class="form-control" id="txtarea" name="notes" rows="3"></textarea>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                <button type="button" class="btn btn-success" id="idBtnSubmitKeahlian">Submit</button>
                <button type="button" class="btn btn-success" id="idBtnCancelKeahlian">Cancel</button>
            </td>
        </tr>
    </table>
</form>
<script>
    $('#idBtnCancelKeahlian').click(function () {
        $('#idMdlCreateKeahlian').close;
        location.reload();
    });

    $('#idBtnSubmitKeahlian').click(function () {
        debugger;
        var vDatabarang = $('#idFrmSubmitKeahlian').serialize();
        $.ajax({
            url: '/Keahlian/Save',
            data: vDatabarang,
            method: 'Post',
            success: function (mdl) {
                debugger;
                if (mdl.Simpan == "Berhasil") {
                    alert("Data berhasil disimpan");
                    //$('.modal').modal('hide');
                    //$.modal.close();
                    $('#idMdlCreateKeahlian').close;
                    location.reload();

                }
                else {
                    debugger;
                    alert("Data gagal disimpan");
                }
            }
        });
    });
</script>